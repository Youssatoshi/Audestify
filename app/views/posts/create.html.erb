}

.image-placeholder {
  background-color: #ccc; /* Placeholder background color */
  width: 200px; /* Adjust width as needed */
  height: 150px; /* Adjust height as needed */
  line-height: 150px; /* Center the text vertically */
  text-align: center;
  margin-top: 70px;
  margin-right: 200px;
  margin-left: 100px; /* Center the text horizontally */
}

.text-description {
  margin-top: 10px;
  margin-left: 140px;/* Add some spacing between image placeholder and text description */
}

.confirm-button {
  background-color: #94B9FF; /* Button background color */
  color: white; /* Text color */
  padding: 10px 20px; /* Adjust padding as needed */
  border: none;
  border-radius: 5px;
  cursor: pointer;
  margin-left:140px;
}

/* Styles for the right panel section */
.right-panel {
  padding: 20px;
  background-color: #F2FAFF; /* Panel background color */
  border-radius: 5px;
  width: 500px;

}

h2 {
  margin-bottom: 10px;
}

.account {
  margin-bottom: 10px;
}

.account img {
  width: 30px; /* Adjust image size as needed */
  height: 30px; /* Adjust image size as needed */
  margin-right: 10px; /* Add some spacing between image and text */
}

/* Styles for the switch */
.switch {
  position: relative;
  display: inline-block;
  width: 60px;
  height: 34px;
}
.page-container {
  gap: 10rem;
}
.switch input {
  opacity: 0;
  width: 0;
  height: 0;
}

.slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ccc; /* Default color for the switch background */
  -webkit-transition: .4s;
  transition: .4s;
}

.slider:before {
  position: absolute;
  content: "";
  height: 26px;
  width: 26px;
  left: 4px;
  bottom: 4px;
  background-color: white;
  -webkit-transition: .4s;
  transition: .4s;
}

input:checked + .slider {
  background-color: #94B9FF; /* Color for the switch background when checked */
}

input:checked + .slider:before {
  -webkit-transform: translateX(26px);
  -ms-transform: translateX(26px);
  transform: translateX(26px);
}
.popup {
  display: none;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  padding: 20px;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
}

.popup-content {
  text-align: center;
}

.popup button {
  margin: 0 10px;
  padding: 8px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.popup button.cancel-button {
  background-color: #ccc;
}

.popup button.push-button {
  background-color: #94B9FF;
  color: #fff;
}

</style>

